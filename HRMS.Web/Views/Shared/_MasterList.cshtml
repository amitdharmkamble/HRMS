@model IEnumerable<dynamic>
@{
    string entityName = ViewData["EntityName"]?.ToString() ?? "Item";
    bool showDeleted = ViewBag.ShowDeleted ?? false;
}

<!-- Table Container -->
<div id="table-container">
    <!-- Show Deleted Toggle Button -->
    <button class="btn @(showDeleted ? "btn-outline-danger" : "btn-outline-secondary")"
            hx-get="@Url.Action("Index", new { showDeleted = !showDeleted })"
            hx-target="#table-container"
            hx-push-url="true">
        <i class="bi @(showDeleted ? "bi-eye-slash" : "bi-eye")"></i>
        @(showDeleted ? "Hide Deleted" : "Show Deleted")
    </button>

    <table class="table table-bordered mt-3">
        <thead>
            <tr>
                <th>Name</th>
                <th>Description</th>
                <th>Status</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr id="row-@item.Id" class="@(item.IsDeleted ? "table-danger" : "")">
                    <td>@item.Name</td>
                    <td>@item.Description</td>
                    <td>@(item.IsDeleted ? "Deleted" : "Active")</td>
                    <td>
                        @if (item.IsDeleted)
                        {
                            <!-- Restore Button -->
                            <button class="btn btn-success"
                                    hx-post="@Url.Action("Restore")"
                                    hx-vals='{"id": "@item.Id"}'
                                    hx-target="#row-@item.Id"
                                    hx-swap="outerHTML">
                                Restore
                            </button>
                        }
                        else
                        {
                            <!-- Edit & Delete Buttons -->
                            <button class="btn btn-warning"
                                    hx-get="@Url.Action("Edit", new { id = item.Id })"
                                    hx-target="#modal-body"
                                    hx-trigger="click"
                                    hx-on="htmx:afterRequest: bootstrap.Modal.getOrCreateInstance(document.getElementById('formModal')).show()">
                                Edit
                            </button>

                            <button class="btn btn-danger"
                                    hx-post="@Url.Action("Delete")"
                                    hx-vals='{"id": "@item.Id"}'
                                    hx-target="#row-@item.Id"
                                    hx-swap="outerHTML">
                                Delete
                            </button>
                        }
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>

<!-- Modal -->
<div id="formModal"
     class="modal fade"
     tabindex="-1"
     aria-hidden="true">
    <div class="modal-dialog modal-lg modal-dialog-centered" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Edit Item</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body" id="modal-body">
                <!-- Form content will be loaded here -->
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
            </div>
        </div>
    </div>
</div>
