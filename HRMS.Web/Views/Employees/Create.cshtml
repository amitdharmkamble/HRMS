@model HRMS.Web.Models.ViewModels.EmployeeViewModel

<a href="/employees" class="btn btn-link">
    &larr; Back to Employee List
</a>

<div class="container mt-5">
    <!-- Main Employee Details Container -->
    <div class="card shadow-lg p-4">
        <h3 class="text-center text-primary mb-4">Create Employee</h3>

        <!-- Employee Header Information -->
        <div class="card bg-light p-3">
            <form id="employeeForm" method="post" action="@Url.Action("Create")">
                <div class="row g-3">
                    <div class="col-md-6">
                        <label for="empCode" class="form-label fw-bold">Employee Code</label>
                        <input type="text" class="form-control" id="empCode" placeholder="Enter employee code" asp-for="EmpCode" />
                    </div>
                    <div class="col-md-6">
                        <label for="firstName" class="form-label fw-bold">First Name</label>
                        <input type="text" class="form-control" id="firstName" placeholder="Enter first name" asp-for="FirstName" />
                    </div>
                    <div class="col-md-6">
                        <label for="middleName" class="form-label fw-bold">Middle Name</label>
                        <input type="text" class="form-control" id="middleName" placeholder="Enter middle name" asp-for="MiddleName" />
                    </div>
                    <div class="col-md-6">
                        <label for="lastName" class="form-label fw-bold">Last Name</label>
                        <input type="text" class="form-control" id="lastName" placeholder="Enter last name" asp-for="LastName" />
                    </div>
                    <div class="col-md-6">
                        <label for="department" class="form-label fw-bold">Department</label>
                        <select class="form-select" id="department" asp-for="DepartmentId">
                            <option value="">Select department</option>
                            @foreach (var department in ViewBag.Departments)
                            {
                                <option value="@department.Id">@department.Name</option>
                            }
                        </select>
                    </div>
                    <div class="col-md-6">
                        <label for="designation" class="form-label fw-bold">Designation</label>
                        <select class="form-select" id="designation" asp-for="DesignationId">
                            <option value="">Select designation</option>
                            @foreach (var designation in ViewBag.Designations)
                            {
                                <option value="@designation.Id">@designation.Name</option>
                            }
                        </select>
                    </div>
                </div>

                <!-- Action Buttons -->
                <div class="d-flex justify-content-between mt-4">
                    <a href="/employees" class="btn btn-outline-secondary">Cancel</a>
                    <button type="submit" class="btn btn-primary">Save Employee</button>
                </div>
            </form>
        </div>
        <partial name="_EmployeeDetailsNavigation" />
    </div>
</div>