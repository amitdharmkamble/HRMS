<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Create Employee</title>
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">
    <style>
        /* Add any additional styles here */
        .tab-content {
            margin-top: 20px;
        }

        .tab-pane {
            display: none;
        }

            .tab-pane.active {
                display: block;
            }

        .nav-tabs .nav-item {
            margin-right: 10px;
        }

        .btn-secondary, .btn-primary, .btn-success {
            margin-top: 20px;
        }
    </style>
</head>
<body>

    <div class="container mt-5">
        <h2>Create Employee</h2>

        <!-- Wizard Navigation -->
        <ul class="nav nav-tabs" id="employeeWizard">
            <li class="nav-item">
                <a class="nav-link active" href="#step1">Personal Details</a>
            </li>
            <li class="nav-item">
                <a class="nav-link" href="#step4">Contact</a>
            </li>
            <li class="nav-item">
                <a class="nav-link" href="#step3">Salary</a>
            </li>
            <li class="nav-item">
                <a class="nav-link" href="#step2">Documents</a>
            </li>
            <li class="nav-item">
                <a class="nav-link" href="#step5">Contact Persons</a>
            </li>
        </ul>

        <form id="employeeForm">
            <div class="tab-content mt-3">
                <!-- Step 1: Personal Details -->
                <div class="tab-pane active" id="step1">
                    <div class="form-group">
                        <label for="empCode">Employee Code</label>
                        <input type="text" class="form-control" id="empCode" />
                    </div>
                    <div class="form-group">
                        <label for="firstName">First Name</label>
                        <input type="text" class="form-control" id="firstName" />
                    </div>
                    <div class="form-group">
                        <label for="middleName">Middle Name</label>
                        <input type="text" class="form-control" id="middleName" />
                    </div>
                    <div class="form-group">
                        <label for="lastName">Last Name</label>
                        <input type="text" class="form-control" id="lastName" />
                    </div>
                    <button type="button" class="btn btn-primary next">Next</button>
                </div>

                <!-- Step 2: Documents -->
                <div class="tab-pane" id="step2">
                    <div class="form-group">
                        <label for="documents">Upload Documents</label>
                        <input type="file" class="form-control" id="documents" multiple />
                    </div>
                    <button type="button" class="btn btn-secondary prev">Previous</button>
                    <button type="button" class="btn btn-primary next">Next</button>
                </div>

                <!-- Step 3: Salary -->
                <div class="tab-pane" id="step3">
                    <div class="form-group">
                        <label for="basicSalary">Basic Salary</label>
                        <input type="number" class="form-control" id="basicSalary" />
                    </div>
                    <button type="button" class="btn btn-secondary prev">Previous</button>
                    <button type="button" class="btn btn-primary next">Next</button>
                </div>

                <!-- Step 4: Contact -->
                <div class="tab-pane" id="step4">
                    <div class="form-group">
                        <label for="phone">Phone Number</label>
                        <input type="tel" class="form-control" id="phone" />
                    </div>
                    <div class="form-group">
                        <label for="email">Email</label>
                        <input type="email" class="form-control" id="email" />
                    </div>
                    <button type="button" class="btn btn-secondary prev">Previous</button>
                    <button type="button" class="btn btn-primary next">Next</button>
                </div>

                <!-- Step 5: Contact Persons -->
                <div class="tab-pane" id="step5">
                    <div class="form-group">
                        <label for="emergencyContactName">Emergency Contact Name</label>
                        <input type="text" class="form-control" id="emergencyContactName" />
                    </div>
                    <div class="form-group">
                        <label for="emergencyContactPhone">Emergency Contact Phone</label>
                        <input type="tel" class="form-control" id="emergencyContactPhone" />
                    </div>
                    <button type="button" class="btn btn-secondary prev">Previous</button>
                    <button type="submit" class="btn btn-success">Submit</button>
                </div>
            </div>
        </form>
    </div>

    <!-- JS Libraries -->
    <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>

    <!-- Custom JS -->
    <script>
        $(document).ready(function () {
            $(".next").click(function () {
                var currentTab = $(".nav-tabs .active");
                var nextTab = currentTab.parent().next().find("a");
                if (nextTab.length > 0) {
                    currentTab.removeClass("active");
                    nextTab.addClass("active").tab("show");
                    $(".tab-pane").removeClass("active");
                    $(nextTab.attr("href")).addClass("active");
                }
            });

            $(".prev").click(function () {
                var currentTab = $(".nav-tabs .active");
                var prevTab = currentTab.parent().prev().find("a");
                if (prevTab.length > 0) {
                    currentTab.removeClass("active");
                    prevTab.addClass("active").tab("show");
                    $(".tab-pane").removeClass("active");
                    $(prevTab.attr("href")).addClass("active");
                }
            });
        });
    </script>

</body>
</html>
