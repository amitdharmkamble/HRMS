<div class="container mt-5">
    <h2>Create Employee</h2>

    <!-- Wizard Navigation -->
    <ul class="nav nav-tabs" id="employeeWizard">
        <li class="nav-item">
            <a class="nav-link active" href="#step1">Employee Header</a>
        </li>
        <li class="nav-item">
            <a class="nav-link" href="#step4">Employee Personal Details</a>
        </li>
        <li class="nav-item">
            <a class="nav-link" href="#step3">Employee Work Details</a>
        </li>
        <li class="nav-item">
            <a class="nav-link" href="#step2">Employee Salary Details</a>
        </li>
        <li class="nav-item">
            <a class="nav-link" href="#step5">Employee Document Details</a>
        </li>
        <li class="nav-item">
            <a class="nav-link" href="#step5">Employee Contact Details</a>
        </li>
    </ul>

    <!-- Step 1: Employee Header -->
    <form id="employeeForm">
        <div class="tab-content mt-3">
            <div class="tab-pane active" id="step1">
                <div class="form-group">
                    <label for="empCode">Employee Code</label>
                    <input type="text" class="form-control" id="empCode" />
                </div>
                <div class="form-group">
                    <label for="firstName">Employee First Name</label>
                    <input type="text" class="form-control" id="firstName" />
                </div>
                <div class="form-group">
                    <label for="middleName">Employee Middle Name</label>
                    <input type="text" class="form-control" id="middleName" />
                </div>
                <div class="form-group">
                    <label for="lastName">Employee Last Name</label>
                    <input type="text" class="form-control" id="lastName" />
                </div>
                <button type="button" class="btn btn-primary next">Next</button>
            </div>
        </div>
    </form>

    <!-- Step 2: Employee Personal Details -->
    <form>
        <div class="tab-pan active" id="step2">
            <div class="form-group">
                <label for="gender">Gender(*)</label>
                <select class="form-group" style="width:100px;background-color:white;color:black;" id="gender">
                    <option value="Male">Male</option>
                    <option value="Female">Female</option>
                    <option value="Other">Other</option>
                </select>
            </div>
            <div class="form-group">
                <label for="gender">Marital Status(*)</label>
                <select class="form-group" style="width:100px;background-color:white;color:black;" id="gender">
                    <option value="Unspecified">Unspeciefied</option>
                    <option value="Male">Married</option>
                    <option value="Female">Never Married</option>
                    <option value="Other">Divorced</option>
                </select>
            </div>
            <div class="form-group">
                <label for="gender">Nationality(*)</label>
                <select class="form-group" style="width:150px;background-color:white;color:black;" id="gender">
                    <option value="Unspecified">Unspecified</option>
                    <option value="Indian">Indian</option>
                    <option value="Male">Non Resident of India</option>
                </select>
            </div>
            <div class="form-group">
                <label for="gender">Permanent Address</label>
                <input type="text" placeholder="Address line 1" maxlength="100"/>
                <input type="text" placeholder="Address line 2" maxlength="100" />
                <input type="text" placeholder="Address line 3" maxlength="100" />
                <select class="form-group" style="width:150px;background-color:white;color:black;" id="permanantAddressCity">
                    <option value="Unspecified">Unspecified</option>
                    <option value="Pune">Pune</option>
                    <option value="Out of Pune">Out of Pune</option>
                </select>
                <select class="form-group" style="width:150px;background-color:white;color:black;" id="permanantAddressCity">
                    <option value="Unspecified">Unspecified</option>
                    <option value="Pune">Pune</option>
                    <option value="Out of Pune">Out of Pune</option>
                </select>
            </div>
            <button type="button" class="btn btn-secondary prev">Previous</button>
            <button type="button" class="btn btn-primary next">Next</button>
        </div>
    </form>


    <!-- Step 3: Employee Work Details -->
    <form>
        <div class="tab-pane" id="step3">
            <div class="form-group">
                <label for="basicSalary">Basic Salary</label>
                <input type="number" class="form-control" id="basicSalary" />
            </div>
            <button type="button" class="btn btn-secondary prev">Previous</button>
            <button type="button" class="btn btn-primary next">Next</button>
        </div>
    </form>


    <!-- Step 4: Employee Salary Details -->
    <form>
        <div class="tab-pane" id="step4">
            <div class="form-group">
                <label for="phone">Phone Number</label>
                <input type="tel" class="form-control" id="phone" />
            </div>
            <div class="form-group">
                <label for="email">Email</label>
                <input type="email" class="form-control" id="email" />
            </div>
            <button type="button" class="btn btn-secondary prev">Previous</button>
            <button type="button" class="btn btn-primary next">Next</button>
        </div>
    </form>


    <!-- Step 5: Employee Document Details -->
    <form>
        <div class="tab-pane" id="step5">
            <div class="form-group">
                <label for="emergencyContactName">Emergency Contact Name</label>
                <input type="text" class="form-control" id="emergencyContactName" />
            </div>
            <div class="form-group">
                <label for="emergencyContactPhone">Emergency Contact Phone</label>
                <input type="tel" class="form-control" id="emergencyContactPhone" />
            </div>
            <button type="button" class="btn btn-secondary prev">Previous</button>
            <button type="submit" class="btn btn-success">Submit</button>
        </div>
    </form>

    <!-- Step 5: Employee Contact Details -->
    <form>
        <div class="tab-pane" id="step5">
            <div class="form-group">
                <label for="emergencyContactName">Emergency Contact Name</label>
                <input type="text" class="form-control" id="emergencyContactName" />
            </div>
            <div class="form-group">
                <label for="emergencyContactPhone">Emergency Contact Phone</label>
                <input type="tel" class="form-control" id="emergencyContactPhone" />
            </div>
            <button type="button" class="btn btn-secondary prev">Previous</button>
            <button type="submit" class="btn btn-success">Submit</button>
        </div>
    </form>
</div>