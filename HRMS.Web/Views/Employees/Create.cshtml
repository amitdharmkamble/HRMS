@model HRMS.Web.Models.ViewModels.EmployeeViewModel

@{
    ViewBag.Title = "Create Employee";
}

<h2>Create Employee</h2>

<!-- Wizard Navigation -->
<ul class="nav nav-tabs" id="employeeWizard">
    <li class="nav-item">
        <a class="nav-link active" href="#step1" data-toggle="tab">Personal Details</a>
    </li>
    <li class="nav-item">
        <a class="nav-link" href="#step2" data-toggle="tab">Documents</a>
    </li>
    <li class="nav-item">
        <a class="nav-link" href="#step3" data-toggle="tab">Salary</a>
    </li>
    <li class="nav-item">
        <a class="nav-link" href="#step4" data-toggle="tab">Contact</a>
    </li>
    <li class="nav-item">
        <a class="nav-link" href="#step5" data-toggle="tab">Contact Persons</a>
    </li>
</ul>

<form asp-action="Create" method="post">
    <div class="tab-content mt-3">
        <!-- Step 1: Personal Details -->
        <div class="tab-pane fade show active" id="step1">
            <div class="form-group">
                <label asp-for="EmpCode" class="control-label"></label>
                <input asp-for="EmpCode" class="form-control" />
                <span asp-validation-for="EmpCode" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="FirstName" class="control-label"></label>
                <input asp-for="FirstName" class="form-control" />
                <span asp-validation-for="FirstName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="LastName" class="control-label"></label>
                <input asp-for="LastName" class="form-control" />
                <span asp-validation-for="LastName" class="text-danger"></span>
            </div>
            <button type="button" class="btn btn-primary next">Next</button>
        </div>

        <!-- Step 2: Documents -->
        <div class="tab-pane fade" id="step2">
            <div class="form-group">
                <label asp-for="Documents" class="control-label">Upload Documents</label>
                <input type="file" class="form-control" multiple />
            </div>
            <button type="button" class="btn btn-secondary prev">Previous</button>
            <button type="button" class="btn btn-primary next">Next</button>
        </div>

        <!-- Step 3: Salary -->
        <div class="tab-pane fade" id="step3">
            <div class="form-group">
                <label asp-for="Salary.BasicSalary" class="control-label">Basic Salary</label>
                <input asp-for="Salary.BasicSalary" class="form-control" />
                <span asp-validation-for="Salary.BasicSalary" class="text-danger"></span>
            </div>
            <button type="button" class="btn btn-secondary prev">Previous</button>
            <button type="button" class="btn btn-primary next">Next</button>
        </div>

        <!-- Step 4: Contact -->
        <div class="tab-pane fade" id="step4">
            <div class="form-group">
                <label asp-for="Contact.Address" class="control-label">Phone Number</label>
                <input asp-for="Contact.Address" class="form-control" />
                <span asp-validation-for="Contact.Address" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Contact.Email" class="control-label">Email</label>
                <input asp-for="Contact.Email" class="form-control" />
                <span asp-validation-for="Contact.Email" class="text-danger"></span>
            </div>
            <button type="button" class="btn btn-secondary prev">Previous</button>
            <button type="button" class="btn btn-primary next">Next</button>
        </div>

        <!-- Step 5: Contact Persons -->
        <div class="tab-pane fade" id="step5">
            <div class="form-group">
                <label asp-for="ContactPersons[0].Name" class="control-label">Emergency Contact Name</label>
                <input asp-for="ContactPersons[0].Name" class="form-control" />
                <span asp-validation-for="ContactPersons[0].Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ContactPersons[0].Phone" class="control-label">Emergency Contact Phone</label>
                <input asp-for="ContactPersons[0].Phone" class="form-control" />
                <span asp-validation-for="ContactPersons[0].Phone" class="text-danger"></span>
            </div>
            <button type="button" class="btn btn-secondary prev">Previous</button>
            <button type="submit" class="btn btn-success">Submit</button>
        </div>
    </div>
</form>

@section Scripts {
    <script>
        $(document).ready(function () {
            $(".next").click(function () {
                var currentTab = $(".nav-tabs .active");
                var nextTab = currentTab.parent().next().find("a");
                if (nextTab.length > 0) {
                    currentTab.removeClass("active");
                    nextTab.addClass("active").tab("show");
                }
            });

            $(".prev").click(function () {
                var currentTab = $(".nav-tabs .active");
                var prevTab = currentTab.parent().prev().find("a");
                if (prevTab.length > 0) {
                    currentTab.removeClass("active");
                    prevTab.addClass("active").tab("show");
                }
            });
        });
    </script>
}
