@model HRMS.Web.Models.ViewModels.EmployeeViewModel

<form>
    <div class="tab-pane active">

        <div class="row mb-3">
            <label for="dateOfBirth" class="col-sm-2 col-form-label fw-bold" asp-for="DateOfBirth">Date Of Birth(*)</label>
            <div class="col-sm-10">
                <input type="date" class="form-select" id="dateOfBirth" asp-for="DateOfBirth"/>
            </div>
        </div>

        <div class="row mb-3">
            <label for="dateOfJoining" class="col-sm-2 col-form-label fw-bold" asp-for="DateOfJoining">Date Of Joining(*)</label>
            <div class="col-sm-10">
                <input type="date" class="form-select" id="dateOfJoining" asp-for="DateOfJoining" />
            </div>
        </div>

        <div class="row mb-3">
            <label for="gender" class="col-sm-2 col-form-label fw-bold" asp-for="Gender">Gender(*)</label>
            <div class="col-sm-10">
                <select class="form-select" id="gender" asp-for="Gender">
                    <option value="Unspecified">Unspecified</option>
                    <option value="Male">Male</option>
                    <option value="Female">Female</option>
                    <option value="Other">Other</option>
                </select>
            </div>
        </div>

        <div class="row mb-3">
            <label for="maritalStatus" class="col-sm-2 col-form-label fw-bold" asp-for="MaritalStatus">Marital Status(*)</label>
            <div class="col-sm-10">
                <select class="form-select" id="maritalStatus" asp-for="MaritalStatus">
                    <option value="Unspecified">Unspecified</option>
                    <option value="Married">Married</option>
                    <option value="Never Married">Never Married</option>
                    <option value="Divorced">Divorced</option>
                </select>
            </div>
        </div>

        

        <div class="d-flex justify-content-end">
            <button type="button" class="btn btn-primary">Save</button>
        </div>
    </div>
</form>
